@model Movie

<div class="row">
    <div class="col-md-12">
        <h2>@ViewBag.Title</h2>
        <hr />
        <div>
            <dl class="dl-horizontal">
                <dt>Title</dt>
                <dd id="movie-title">@Model.Title</dd>
                <dt>Year</dt>
                <dd>@Model.Year</dd>
            </dl>
        </div>
        <p>
            <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
            <a asp-action="Index">Back to List</a>
        </p>
    </div>
</div>
